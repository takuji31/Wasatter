<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.senchan.android.wasatter"
    android:versionCode="12"
    android:versionName="1.1.0a" >
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:icon="@drawable/wasattericon"
        android:label="@string/app_name" android:name="Wasatter">
        <activity
            android:name=".ActivityMain"
            android:configChanges="orientation" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.Update"
            android:configChanges="orientation"
            android:label="New post" >
        </activity>
        <activity
            android:name=".activity.Setting"
            android:configChanges="orientation"
            android:label="Setting" >
        </activity>
        <activity
            android:name=".activity.Detail"
            android:configChanges="orientation"
            android:label="Status" >
        </activity>
        <activity
            android:name=".activity.Todo"
            android:configChanges="orientation"
            android:label="TODO" >
        </activity>
        <activity
            android:name=".activity.OAuthToken"
            android:configChanges="orientation"
            android:label="Get OAuth token" >
        </activity>
    </application>
</manifest>